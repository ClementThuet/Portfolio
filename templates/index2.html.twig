        <script>
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ["HTML/CSS", "JS",'PHP','Symfony','Photoshop'],
                datasets: [{
                    data: [2.8, 2.5,3.1, 3,1.2],
                    backgroundColor: [
