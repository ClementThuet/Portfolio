                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                legend: {
                    display: false
                 },
                tooltips: {enabled: false},
                hover: {mode: null},
                scales: {
                    yAxes: [{
                        display: true,
                ticks: {
                    min: 0,
                    max: 4,
                    stepSize: 0.2,
                    suggestedMin: 0,
                    suggestedMax: 4,
                    callback: function(label) {
                      switch (label) {
                        case 0:
                          return 'Jamais entendu parler';
                        case 1:
                          return 'Débutant';
                        case 2:
                          return 'Intermédiaire';
                        case 3:
                          return 'Confirmé';
                        case 4:
                          return 'Google ? Plus besoin ';
                      }
                    }
                  },
                  title: {
                    display: false
                },
                  gridLines: {
                    display: true
                  }
                }]
                }
            }
        });
